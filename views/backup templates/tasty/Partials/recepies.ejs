<div class="recepie_area">
    <div class="container">
        <div class="d-flex flex-wrap">
            <% Posts.forEach(post => { %>
            <div class="col-xl-4 col-lg-4 col-md-6">
                <div class="single_recepie text-center">
                    <div class="recepie_thumb">
                        <img src="<%= post.covers[0] %>" alt="" />
                    </div>
                    <h3 style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= post.title %></h3>
                    <a href="<%=post.category.Slug%>"><%= post.category.Name %></a>
                    <p>Time Needs: 30 Mins</p>
                    <a href="<%=post.category.Slug%>?post=<%=post["_id"]%>" class="line_btn">View Full Recipe</a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
