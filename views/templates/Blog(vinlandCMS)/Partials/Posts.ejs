<div class="PageContent col-12 col-lg-9  row align-content-start">
    <% Posts.forEach(post=>{%>
        <div class="blog card col-11 col-md-5 mx-auto mb-5 p-0">
            <% if(post.covers.length===1){ %>
                <div class="card-img">
                    <img class="card-img-top" src="<%=post.covers[0]%>" alt="Cover Image">
                </div>
            <% }
            else{ %>
                <div id="blog" class="carousel slide"  data-interval="0" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target=".carousel" data-slide-to="0" class="active"></li>
                        <li data-target=".carousel" data-slide-to="1"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/files/Default/images/background.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://cdn.jevelin.shufflehound.com/wp-content/uploads/sites/11/2016/11/1-1024x777.jpg" alt="Second slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#blog" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#blog" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            <%}%>
            <div class="card-body">
                    <span>by <a href="/user/<%=post.author._id%>"><%=post.author.username%></a></span>
                    <% let date=new Date(post.modified_date).toLocaleDateString(undefined,{ weekday: undefined, year: 'numeric', month: 'numeric', day: undefined })%>
                    <span>on <a href="/search?date=<%=date%>" class="text-muted"><%= date%></a></span>
                    <br>
                    <a href="<%=post.category.Slug%>?post=<%=post["_id"]%>" class="card-title"><%=post.title%></a>
                    <p><%=post.excerpt%></p>
                    <div class="row align-items-center">
                        <div class="border-bottom flex-grow-1"></div>
                        <a href="<%=post.category.Slug%>?post=<%=post["_id"]%>" class="btn"><i class="far fa-thumbs-up"></i> <%=post.rating.likes%></a>
                        <a href="<%=post.category.Slug%>?post=<%=post["_id"]%>" class="btn"><i class="far fa-thumbs-down"></i> <%=post.rating.dislikes%></a>
                        <a href="<%=post.category.Slug%>?post=<%=post["_id"]%>#Comments" class="btn"><i class="far fa-comment-dots"></i> <%=post.comments.length%></a>
                    </div>
                    <span class="fas fa-tags"></span>
                    <%post.tags.forEach(tag=>{%>
                        <a href="/tags/<%=tag%>" class="text-muted ml-1"><%= "#"+tag %></a>
                    <%})%>
                </div>
        </div>
    <%})%>
</div>