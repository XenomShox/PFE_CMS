<!DOCTYPE html>
<html lang="en">
    <% include ./partials/header %>
    <body class="Category">
        <% include ./partials/navbar-light.ejs %>
        <div style="height: 20vh; background-color: black"></div>
        <div class="Content">
            <div style="background-color: #fbfbfb">
                <div class="container pb-3 pt-4">
                    <h3 class="font-weight-bold">User Profile</h3>
                </div>
            </div>
            <div class="container d-flex flex-column">
                <div class="row py-5">
                    <div class="col-md-4 col-12">
                        <div class="w-100">
                            <img
                                src="<%= user.profileImage %>"
                                alt="..."
                                class="img-fluid rounded-circle"
                            />
                        </div>
                    </div>
                    <div class="col-md-8 col-12">
                        <div
                            class="d-flex justify-content-between align-items-center"
                        >
                            <h1 class="mt-3 text-capitalize">
                                <%=user.username%>
                            </h1>
                            <% if(!currentUser._id.equals(user._id)) { %>
                            <a
                                href="/user/chat/<%= user._id %>"
                                class="btn btn-primary"
                                >Message</a
                            >
                            <% } %>
                        </div>
                        <% if(currentUser._id.equals(user._id)) { %>
                        <form action="/user/<%= user._id %>" method="post">
                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>First Name</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%=user.firstName%>"
                                            name="firstName"
                                            placeholder="First Name"
                                        />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Last Name</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%=user.lastName%>"
                                            name="lastName"
                                            placeholder="Last Name"
                                        />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-group-default">
                                        <label>Birth Date: </label>

                                        <input type="date" class="form-control"
                                        id="datepicker" name="birthday"
                                        value="<%=`${user.birthday.getFullYear()}-${user.birthday.getMonth()+1
                                        < 10?
                                        "0"+(user.birthday.getMonth()+1):user.birthday.getMonth()+1}-${user.birthday.getDay()
                                        <
                                        10?"0"+user.birthday.getDate():user.birthday.getDate()}`%>"
                                        placeholder="Birth-Date">
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <div class="form-group form-group-default">
                                        <label>Email</label>
                                        <input
                                            type="email"
                                            class="form-control"
                                            value="<%=user.email%>"
                                            name="email"
                                            placeholder="Email"
                                        />
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <div class="form-group form-group-default">
                                        <label>Phone</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            value="<%=user.phone%>"
                                            name="phone"
                                            placeholder="Phone"
                                        />
                                    </div>
                                </div>
                            </div>
                            <div class="text-right mt-3 mb-3">
                                <button class="btn btn-success" type="submit">
                                    Save
                                </button>
                            </div>
                        </form>
                        <% } else { %>
                        <ul class="list-group">
                            <li class="list-group-item">
                                First name: <%= user.firstName %>
                            </li>
                            <li class="list-group-item">
                                Last name: <%= user.lastName %>
                            </li>
                            <li class="list-group-item">
                                Email: <%= user.email %>
                            </li>
                            <li class="list-group-item">
                                Phone: <%= user.phone %>
                            </li>
                            <li class="list-group-item">
                                Birthday:
                                <%=`${user.birthday.getFullYear()}-${user.birthday.getMonth()+1
                                < 10?
                                "0"+(user.birthday.getMonth()+1):user.birthday.getMonth()+1}-${user.birthday.getDay()
                                <
                                10?"0"+user.birthday.getDate():user.birthday.getDate()}`%>
                            </li>
                        </ul>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <% include ./partials/footer.ejs %>
    </body>
</html>
