<!DOCTYPE html>
<html>
    <% include ./Partials/header.ejs %>
    <body class="Category">
        <% include ./Partials/navbar.ejs %>
        <div
            class="slider_area"
            style="height: 20vh; background-color: #e9e9e9"
        ></div>
        <div class="Content">
            <div class="container my-5">
                <div class="row">
                    <ol
                        style="background-color: white"
                        class="breadcrumb pt-2 my-auto"
                    >
                        <li class="breadcrumb-item active">
                            <a href="/"><i class="fas fa-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/tags/<%=tag%>" class="font-weight-bold"
                                >#<%=tag%></a
                            >
                        </li>
                    </ol>
                    <div class="form-inline row ml-auto my-auto">
                        <div class="input-group mr-3 ml-auto">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="form"
                                    >Sort</label
                                >
                            </div>
                            <select
                                class="custom-select"
                                id="form"
                                onchange="location = this.value;"
                            >
                                <option value="/tags/<%= tag%>?sort=title">
                                    Title A-Z
                                </option>
                                <option value="/tags/<%= tag%>?sort=-title">
                                    Title Z-A
                                </option>
                                <option value="/tags/<%= tag%>?sort=date">
                                    Oldest
                                </option>
                                <option
                                    value="/tags/<%= tag%>?sort=-date"
                                    selected
                                >
                                    Newest
                                </option>
                                <option
                                    value="/tags/<%= tag%>?sort=rating.likes"
                                >
                                    Most Liked
                                </option>
                                <option
                                    value="/tags/<%= tag%>?sort=rating.dislikes"
                                >
                                    Most Disliked
                                </option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <section class="blog_area section-padding p-0">
                <div class="container">
                    <div class="row">
                        <% include ./Partials/posts.ejs %> <% include
                        ./Partials/sideBar.ejs %>
                    </div>
                </div>
            </section>
        </div>
        <% include ./Partials/footer.ejs %>
    </body>
</html>
