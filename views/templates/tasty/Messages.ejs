        <script src="/Admin/Files/javascripts/Assets/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            custom: {"families":["Font Awesome 5 Solid"],
                urls: ['/Admin/Files/stylesheets/Assets/fonts.min.css']},
            active: function() {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <link
        rel="stylesheet"
        href="/Admin/Files/stylesheets/Assets/bootstrap.min.css"
    />
        <script src="/Admin/Files/javascripts/Assets/core/jquery.3.2.1.min.js"></script>
        <style>
            .container-fluid {
                width: 100%;
                height: 100%;
            }
            img {
                max-width: 100%;
            }
            .inbox_people {
                height: 100%;
                background: #f8f8f8 none repeat scroll 0 0;
                float: left;
                overflow: hidden;
                width: 40%;
                border-right: 1px solid #c4c4c4;
            }
            .inbox_msg {
                height: 100%;
                border: 1px solid #c4c4c4;
                clear: both;
                overflow: hidden;
            }
            .top_spac {
                margin: 20px 0 0;
            }

            .recent_heading {
                float: left;
                width: 40%;
            }
            .srch_bar {
                display: inline-block;
                text-align: right;
                width: 60%;
                /* padding: ; */
            }
            .headind_srch {
                padding: 10px 29px 10px 20px;
                overflow: hidden;
                border-bottom: 1px solid #c4c4c4;
            }

            .recent_heading h4 {
                color: #05728f;
                font-size: 21px;
                margin: auto;
            }
            .srch_bar input {
                border: 1px solid #cdcdcd;
                border-width: 0 0 1px 0;
                width: 80%;
                padding: 2px 0 4px 6px;
                background: none;
            }
            .srch_bar .input-group-addon button {
                background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
                border: medium none;
                padding: 0;
                color: #707070;
                font-size: 18px;
            }
            .srch_bar .input-group-addon {
                margin: 0 0 0 -27px;
            }

            .chat_ib h5 {
                font-size: 15px;
                color: #464646;
                margin: 0 0 8px 0;
            }
            .chat_ib h5 span {
                font-size: 13px;
                float: right;
            }
            .chat_ib p {
                font-size: 14px;
                color: #989898;
                margin: auto;
            }
            .chat_img {
                float: left;
                width: 11%;
            }
            .chat_ib {
                float: left;
                padding: 0 0 0 15px;
                width: 88%;
            }

            .chat_people {
                overflow: hidden;
                clear: both;
            }
            .chat_list {
                border-bottom: 1px solid #c4c4c4;
                margin: 0;
                padding: 18px 16px 10px;
            }
            .inbox_chat {
                height: 100%;
                overflow-y: auto;
            }

            .active_chat {
                background: #ebebeb;
            }

            .incoming_msg_img {
                display: inline-block;
                width: 6%;
            }
            .received_msg {
                display: inline-block;
                padding: 0 0 0 10px;
                vertical-align: top;
                width: 92%;
            }
            .received_withd_msg p {
                background: #ebebeb none repeat scroll 0 0;
                border-radius: 3px;
                color: #646464;
                font-size: 14px;
                margin: 0;
                padding: 5px 10px 5px 12px;
                width: 100%;
            }
            .time_date {
                color: #747474;
                display: block;
                font-size: 12px;
                margin: 8px 0 0;
            }
            .received_withd_msg {
                max-width: 46%;
                overflow-wrap: break-word;
            }
            .mesgs {
                float: left;
                padding: 30px 15px 0 25px;
                width: 60%;
                height: 100%;
            }

            .sent_msg p {
                background: #ffc000 none repeat scroll 0 0;
                border-radius: 3px;
                font-size: 14px;
                margin: 0;
                color: #fff;
                padding: 5px 10px 5px 12px;
                width: 100%;
            }
            .outgoing_msg {
                overflow: hidden;
                margin: 26px 0 26px;
            }
            .sent_msg {
                float: right;
                max-width: 46%;
                overflow-wrap: break-word;
            }
            .input_msg_write input {
                background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
                border: medium none;
                color: #4c4c4c;
                font-size: 15px;
                min-height: 48px;
                width: 100%;
            }

            .type_msg {
                border-top: 1px solid #c4c4c4;
                position: relative;
            }
            .msg_send_btn {
                background: #ffc000 none repeat scroll 0 0;
                border: medium none;
                border-radius: 50%;
                color: #fff;
                cursor: pointer;
                font-size: 17px;
                height: 33px;
                position: absolute;
                right: 0;
                top: 11px;
                width: 33px;
            }
            .messaging {
                height: 100%;
                padding: 0 0 0 0;
            }
            .msg_history {
                width: 100%;
                overflow-y: auto;
            }
        </style>
    </head>
    <body>
        <div class="container-fluid p-0">
            <div class="messaging">
                <div class="inbox_msg">
                    <div class="inbox_people">
                        <div class="headind_srch">
                            <div class="recent_heading">
                                <a href="/">
                                    <i style="color: #ffc000;" class="fas fa-chevron-left"></i>
                                </a>
                            </div>
                          </div>
                        <div class="inbox_chat">
                            <div class="chat_list active_chat">
                                <div class="chat_people">
                                    <div class="chat_img">
                                        <a
                                            href="/user/chat/<%= partnerUser._id %>"
                                        >
                                            <img
                                                src="<%= partnerUser.profileImage %>"
                                                alt="sunil"
                                                class="rounded-circle"
                                            />
                                        </a>
                                    </div>
                                    <div class="chat_ib">
                                        <h5><%= partnerUser.username %></h5>
                                    </div>
                                </div>
                            </div>
                            <% currentUser.contacts.filter(contact => !contact._id.equals(partnerUser._id)).forEach(contact => { %>
                            <div class="chat_list">
                                <div class="chat_people">
                                    <div class="chat_img">
                                        <a
                                            href="/user/chat/<%= contact._id %>"
                                        >
                                            <img
                                                src="<%= contact.profileImage %>"
                                                alt="sunil"
                                                class="rounded-circle"
                                            />
                                        </a>
                                    </div>
                                    <div class="chat_ib">
                                        <h5><%= contact.username %></h5>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <div class="mesgs d-flex flex-column justify-content-end align-items-center">
                        <div class="msg_history">
                            <% messages.forEach(message => { %>
                                <% if(!message.sender.equals(currentUser.id)) { %>
                                    <div class="incoming_msg">
                                        <div class="incoming_msg_img">
                                            <img
                                                src="<%= partnerUser.profileImage %>"
                                                alt="sunil"
                                                class="rounded-circle"
                                            />
                                        </div>
                                        <div class="received_msg">
                                            <div class="received_withd_msg">
                                                <p><%= message.text %></p>
                                                <span class="time_date"><%= partnerUser.username %></span>
                                            </div>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="outgoing_msg">
                                        <div class="sent_msg">
                                            <p><%= message.text %></p>
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                        <form class="m-0 w-100" action="/message/add/<%= currentUser.id %>/<%= partnerUser.id %>" method="POST">
                            <div class="type_msg">
                                <div class="input_msg_write">
                                    <input
                                        type="text"
                                        class="write_msg"
                                        placeholder="Type a message"
                                        name="text"
                                    />
                                    <button class="msg_send_btn mr-3 p-0" type="submit">
                                        <i class="fas fa-paper-plane" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            var objDiv = document.querySelector(".msg_history");
            objDiv.scrollTop = objDiv.scrollHeight;
        </script>
    </body>
</html>
