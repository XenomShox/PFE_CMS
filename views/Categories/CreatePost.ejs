<!DOCTYPE html>
<html>
<% include ../Partials/Heads/Head1 %>
<body class="Category">
<header class="position-relative">
    <div class="container d-flex flex-column">
        <% include ../Partials/Navs/Nav2 %>
    </div>
</header>
<div class="Content">
    <div style="background-color: #fbfbfb">
        <div class="container  pt-4">
            <div class="row px-3">
                <h3 class="font-weight-bold">Category: <%=Category.Name%></h3>
                <ol class="breadcrumb ml-auto pt-2">
                    <li class="breadcrumb-item active">
                        <a href="/"><i class="fas fa-home"></i></a>
                    </li>
                    <%
                        let Slugs=Category.Slug.split("/"),sslug="/Categories";
                        for(let i=0 ;i<Slugs.length;i++){
                            sslug+="/"+Slugs[i];
                        %>
                        <li class="breadcrumb-item">
                            <a href="<%=sslug%>" class="font-weight-bold"><%=Slugs[i]%></a>
                        </li>
                        <%}
                    %>
                </ol>
            </div>
        </div>
    </div>
    <div class="container d-flex flex-column">
        <a class="btn btn-success ml-auto mr-5 my-3" href="<%= Category.Slug%>?create=true"> <i class="far fa-edit"></i><span class="ml-1">Write an article</span></a>
        <div class="Layout row mt-3">
            <% if(Posts.length>0){%>
                <% include ../Partials/Contents/Content1 %>
                <% include ../Partials/SideBars/SideBar1 %>
            <%}else{%>
                <h1 class="text-center my-5 mx-auto">There is no Post yet.</h1>
                <% include ../Partials/SideBars/SideBar2 %>
            <%}%>
        </div>
    </div>
</div>
<% include ../Partials/Footers/Footer1.ejs %>

</body>
</html>
