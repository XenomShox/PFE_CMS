<div class="content mb-5" plugin-scripts="/Admin/files/javascripts/Assets/plugin/bootstrap-notify/bootstrap-notify.min.js,/Admin/files/javascripts/Assets/core/FormAjax.js"
     loading-script="/Admin/Files/javascripts/Install/Continue.js">
    <div class="page-inner row py-5 bg-info-gradient mx-0">
        <div class="ml-5 text-white pb-2">
            <h1>Website Installation</h1>
            <p>Setting website details.</p>
        </div>
    </div>
    <div id="Settings" class="row align-items-start col-11 mx-auto my--5">
        <div class="card col-12">
            <form class="card-body d-flex flex-column" method="post" action="/Install/Details/2" >
                <h1 class="ml-4">Social Media</h1>
                <div class="ml-5">
                    <div>
                        <h2 class="ml-2">Facebook</h2>
                        <div class="ml-2 form-group form-inline">
                            <label for="FacebookName" class="col-md-3 col-form-label justify-content-start">Name :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="FacebookName" name="SocialMedia[Facebook][Name]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.Facebook.Name:""%>" placeholder="Page Name">
                            </div>
                        </div>
                        <div class="ml-2 form-group form-inline">
                            <label for="FacebookUrl" class="col-md-3 col-form-label justify-content-start">Url :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="FacebookUrl" name="SocialMedia[Facebook][Url]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.Facebook.Url:""%>" placeholder="https://www.facebook.com/PageName">
                            </div>
                        </div>
                    </div>
                    <div>
                        <h2 class="ml-2">Instagram</h2>
                        <div class="ml-2 form-group form-inline">
                            <label for="Instagram" class="col-md-3 col-form-label justify-content-start">Account Name :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="Instagram" name="SocialMedia[Instagram][Name]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.Instagram.Name:""%>" placeholder="@Account">
                            </div>
                        </div>
                        <div class="ml-2 form-group form-inline">
                            <label for="InstagramUrl" class="col-md-3 col-form-label justify-content-start">Account Url :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="InstagramUrl" name="SocialMedia[Instagram][Url]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.Instagram.Url:""%>" placeholder="https://www.instagram.com/AcountName">
                            </div>
                        </div>
                    </div>
                    <div >
                        <h2 class="ml-2">Twitter</h2>
                        <div class="ml-2 form-group form-inline">
                            <label for="Twitter" class="col-md-3 col-form-label justify-content-start">Account Name :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="Twitter" name="SocialMedia[Twitter][Name]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.Twitter.Name:""%>" placeholder="@AccountName">
                            </div>
                        </div>
                        <div class="ml-2 form-group form-inline">
                            <label for="TwitterUrl" class="col-md-3 col-form-label justify-content-start">Account Url :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="TwitterUrl" name="SocialMedia[Twitter][Url]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.Twitter.Url:""%>" placeholder="https://twitter.com/AccountName">
                            </div>
                        </div>
                    </div>
                    <div >
                        <h2 class="ml-2">LinkedIn</h2>
                        <div class="form-group form-inline">
                            <label for="LinkedIn" class="col-md-3 col-form-label justify-content-start">Account Name :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="LinkedIn" name="SocialMedia[LinkedIn][Name]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.LinkedIn.Name:""%>" placeholder="Account Name">
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <label for="LinkedInUrl" class="col-md-3 col-form-label justify-content-start">Account Url :</label>
                            <div class="col-md-9 p-0">
                                <input type="text" class="form-control input-full" id="LinkedInUrl" name="SocialMedia[LinkedIn][Url]" value="<%= WebSite.SocialMedia?WebSite.SocialMedia.LinkedIn.Url:""%>" placeholder="https://www.linkedin.com/in/AccountName">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-success btn-border ml-auto mr-2">next</button>
                </div>
            </form>
        </div>
    </div>
</div>