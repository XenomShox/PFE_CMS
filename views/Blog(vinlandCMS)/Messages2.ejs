<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="/Admin/Files/stylesheets/Assets/bootstrap.min.css"
        />
        <title>Messages</title>
        <style>
            body {
                height: 100vh;
            }
            div.messages {
                overflow-y: auto;
                width: 100%;
                height: 90%;
            }
            div.sent {
                right: 0;
            }
            div.message {
                max-width: 60%;
            }
        </style>
    </head>
    <body>
        <!-- <div class="d-flex justify-content-between align-items-center"> -->
        <div class="container d-flex flex-column justify-content-between h-100">
            <div class="border messages p-5 mt-2">
                <% messages.forEach(message => { %> <%
                if(message.sender.equals(currentUser.id)) { %>
                <div class="d-flex justify-content-end">
                    <p class="btn btn-primary"><%= message.text %></p>
                </div>
                <% }else{ %>
                <div class="d-flex justify-content-start">
                    <p class="btn btn-light"><%= message.text %></p>
                </div>
                <% } %> <% }) %>
            </div>
            <div class="inputs pb-2">
                <form
                    class="w-100 text-center"
                    action="/message/add/<%= currentUser.id %>/<%= partnerUser.id %>"
                    method="post"
                >
                    <div class="form-row">
                        <div class="col-10">
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Type here ..."
                                name="text"
                            />
                        </div>
                        <div class="col">
                            <button
                                class="btn btn-primary btn-block"
                                type="submit"
                            >
                                Send
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script>
            var objDiv = document.querySelector(".messages");
            objDiv.scrollTop = objDiv.scrollHeight;
        </script>
    </body>
</html>
