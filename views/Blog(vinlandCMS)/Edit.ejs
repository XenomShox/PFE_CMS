<!DOCTYPE html>
<html>
    <% include ./partials/header.ejs %>
    <body class="Category">
        <% include ./partials/navbar.ejs %>
        <div class="slider_area">
            <div style="height: 20vh; background-color: #e9e9e9;" >
                
            </div>
        </div>
        <div class="Content">
            <div style="background-color: #fbfbfb">
                <div class="container  pt-4">
                    <div class="row px-3">
                        <h3 class="font-weight-bold">Creating a <%=Category.Name%> Post</h3>
                        <ol style="background-color: #fbfbfb" class="breadcrumb ml-auto pt-2">
                            <li class="breadcrumb-item active">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <%
                                let Slugs=Category.Slug.split("/"),sslug="";
                                for(let i=1 ;i<Slugs.length;i++){
                                    sslug+="/"+Slugs[i];
                                %>
                                <li class="breadcrumb-item">
                                    <a href="<%=sslug%>" class="font-weight-bold"><%=Slugs[i]%></a>
                                </li>
                            <% } %>
                        </ol>
                    </div>
                </div>
            </div>

            <section class="blog_area section-padding p-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mb-5 mb-lg-0 mx-auto">
                            <div class="blog_left_sidebar">
                                <form action="<%=Category.Slug%>?post=<%=Post._id%>" method="post" class="d-flex flex-column align-items-end">
                                    <div class="form-group w-100">
                                        <label for="title">Title of the Post</label>
                                        <input name="title" type="text" class="form-control w-100" id="title" aria-describedby="title" required value="<%=Post.title%>">
                                    </div>
                                    <div class="form-group w-100">
                                        <label for="excerpt">Excerpt of the Post</label>
                                        <textarea name="excerpt" class="form-control w-100" id="excerpt" aria-describedby="description" maxlength="150" required><%=Post.excerpt%></textarea>
                                        <small class="form-text text-muted">this description is gonna be used to help for search optimisation.</small>
                                    </div>
                                    <div class="form-group w-100">
                                        <label for="covers">Covers for the Post</label>
                                        <input name="covers" multiple type="text" class="form-control-file w-100" id="covers" aria-describedby="post covers" value="<%=Post.covers[0]%>">
                                        <small class="form-text text-muted">the selected images are gonna be used as cover for the post.</small>
                                    </div>
                                    <div class="form-group w-100">
                                        <label for="tags">Tags of the Post</label>
                                        <input name="tags" type="text" class="form-control w-100" id="tags" aria-describedby="title" value="<%=Post.tags.join(' ')%>">
                                    </div>
                                    <div class="form-group w-100">
                                        <label for="content">The content of the Post</label>
                                        <textarea name="content" class="w-75" id="content" aria-describedby="description" required><%-Post.content%></textarea>
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Edit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <% include ./partials/footer.ejs %>
        <link href="/admin/files/javascripts/Assets/plugin/summernote/summernote-bs4.min.css" rel="stylesheet">
        <script src="/admin/files/javascripts/Assets/plugin/summernote/summernote-bs4.min.js"></script>
        <script>
            $(document).ready(function() {
                $('#content').summernote();
            });

        </script>
    </body>
</html>
