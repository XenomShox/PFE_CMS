<!DOCTYPE html>
<html>
<% include ../Partials/Heads/Head1 %>
<body class="Category">
<header class="position-relative">
    <div class="container d-flex flex-column">
        <% include ../Partials/Navs/Nav2 %>
    </div>
</header>
<div class="Content">
    <div style="background-color: #fbfbfb">
        <div class="container  pt-4">
            <div class="row px-3">
                <h3 class="font-weight-bold">Tag: <%=tag%></h3>
                <ol class="breadcrumb ml-auto pt-2">
                    <li class="breadcrumb-item active">
                        <a href="/"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/tags/<%=tag%>" class="font-weight-bold">#<%=tag%></a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="container d-flex flex-column">
        <div class="form-inline row">
            <div class="input-group mr-3 ml-auto">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="form">Sort</label>
                </div>
                <select class="custom-select" id="form" onchange="location = this.value;">
                    <option value="/tag/<%= tag%>?sort=title">Title A-Z</option>
                    <option value="/tag/<%= tag%>?sort=-title">Title Z-A</option>
                    <option value="/tag/<%= tag%>?sort=date">Oldest</option>
                    <option value="/tag/<%= tag%>?sort=-date" selected>Newest</option>
                    <option value="/tag/<%= tag%>?sort=rating.likes">Most Liked</option>
                    <option value="/tag/<%= tag%>?sort=rating.dislikes">Most Disliked</option>
                </select>
            </div>
            <a class="btn btn-success mr-5 my-3" href="/tag/<%= tag%>?create=true"> <i class="far fa-edit"></i><span class="ml-1">Write an article</span></a>
        </div>
        <div class="Layout row mt-3">
            <% if(Posts.length>0){%>
                <% include ../Partials/Contents/Content1 %>
                <% include ../Partials/SideBars/SideBar1 %>
            <%}else{%>
                <h1 class="text-center my-5 mx-auto">There is no Post yet.</h1>
                <% include ../Partials/SideBars/SideBar2 %>
            <%}%>
        </div>
    </div>
</div>
<% include ../Partials/Footers/Footer1.ejs %>

</body>
</html>
